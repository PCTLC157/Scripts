sleep 5
clear
}
#
##u:Flatpak Install of VLC##
vlc() {
flatpak install org.videolan.VLC
echo "Please Logout for VLC to Appear in the Menu"
sleep 5
clear
}
#
##v:Flatpak Install of Warpinator##
warpinator() {
flatpak install org.x.Warpinator
echo "Please Logout for Warpinator to Appear in the Menu"
sleep 5
clear
}
#
##w:Flatpak Install of Zoom##
zoom() {
flatpak install us.zoom.Zoom
echo "Please Logout for Zoom to Appear in the Menu"
sleep 5
clear
}
#
##Needed To Run The Main Menu Function##
menu




